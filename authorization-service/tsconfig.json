{
  "compilerOptions": {
    "lib": ["es2018", "dom", "ES2020.Promise"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": "lib",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "test/**/*"
  ]
}
